package com.rays.auction;

import java.util.HashSet;
import java.util.Set;

import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.Transaction;
import org.hibernate.cfg.Configuration;

public class TestAuctionItems {

	public static void main(String[] args) {
		
		Set<Bid> bids = new HashSet<Bid>();
		bids.add(new Bid(1, 100, "just now"));
		bids.add(new Bid(2, 300, "just now"));
		bids.add(new Bid(3, 200, "2min ago"));
		
		
		AuctionItem auctionItem = new AuctionItem(1, bids, "pan");
		
		SessionFactory sessionFactory = new Configuration().configure().buildSessionFactory();
		Session session =  sessionFactory.openSession();
		Transaction transaction = session.beginTransaction();
		session.save(auctionItem);
		transaction.commit();
		session.close();
	}

}
